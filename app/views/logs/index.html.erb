<%= link_to "施術履歴一覧", records_path %>
<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>金額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @logs.each do |log| %>
        <p>
          <td><%= log.date %></td>
          <td><%= log.fee %></td>
        </p>
        <p>
          <td><%= link_to "削除", client_log_path(@client, log), method: :delete, data: {confirm: "削除しますか?"} %>
            <%= link_to "編集", edit_client_log_path(@client, log) %>
            <%= link_to "詳細", record_path %>
          </td>
        </p>
      </tr>
    <% end %>
  </tbody>
</table>
